<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="10dp"
    android:background="@color/file_format_color"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintWidth_percent="0.9"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardCornerRadius="5dp"
        android:id="@+id/card_device"
        app:cardBackgroundColor="@color/white"
        tools:ignore="MissingConstraints"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:id="@+id/img_device_class"
                android:src="@drawable/ic_baseline_single_bed_24"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="15dp"
                tools:ignore="MissingConstraints" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_device_name"
                android:textColor="@color/file_format_text_color"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="宫敬哲的iphone11"
                android:textSize="19sp"
                app:layout_constraintVertical_bias="0.18"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/img_device_class"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="MissingConstraints,NotSibling" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_device_alias"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textColor="@color/file_format_text_color"
                android:layout_marginLeft="15dp"
                android:text="GJZ DE IP11"
                android:textSize="15sp"
                app:layout_constraintVertical_bias="0.2"
                app:layout_constraintBottom_toTopOf="@id/text_device_time"
                app:layout_constraintLeft_toRightOf="@id/img_device_class"
                app:layout_constraintTop_toBottomOf="@id/text_device_name"
                tools:ignore="MissingConstraints,NotSibling" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_device_time"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="上次登录时间：1111"
                android:textColor="@color/file_format_text_color"
                android:textSize="12sp"
                app:layout_constraintVertical_bias="0.7"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/img_device_class"
                app:layout_constraintTop_toBottomOf="@id/text_device_name"
                tools:ignore="MissingConstraints,NotSibling" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/img_right"
                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginEnd="10dp"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_device"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>